<%= form_for @movie, :html => { :class => "form-horizontal movie" } do |f| %>

  <% if @movie.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :movie_length, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :movie_length, :class => 'form-control' %>
    </div>
    <%=f.error_span(:movie_length) %>
  </div>
  <div class="form-group">
    <%= f.label :director, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :director, :class => 'form-control' %>
    </div>
    <%=f.error_span(:director) %>
  </div>
 
    <div class="form-group">
    <%= f.label :avatar, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :avatar, :class => 'form-control' %>
    </div>
    <%=f.error_span(:avatar) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                movies_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
